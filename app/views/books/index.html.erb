<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
      	<td><%= book.title %></td>
      	<td><%= book.body %></td>
      	<td>
      		<%= link_to "Show",book_path(book.id) %>
			<%=link_to "Edit" ,edit_book_path(book.id) %>
			<%=link_to "Destroy",book_path(book.id),method: :delete %>
      	</td>
      </tr>
      <% end %>
  </tbody>
</table>


<h2>New book</h2>
<% if @book.errors.any? %>
error can't be blank
<% end %>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit'Create Book' %>

<% end %>